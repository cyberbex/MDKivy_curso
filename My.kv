MI:
<MI>:
    orientation: "vertical"
    MDTopAppBar:
        id: toolbar    
        title: "My App"
        md_bg_color: app.theme_cls.primary_dark
        left_action_items:[["menu"]]
        right_action_items:[["clock"]]
        pos_hint:{"top":1}
    MDBanner:
        id: banner
        text: ["this is may banner"]
        over_widget: container
        left_action: ["cancel",lambda x:root.lefter(self)]
        right_action:["close",lambda x:root.righter(self)]
    MDBoxLayout:
        orientation:"vertical"
        id:container
        size_hint_y:None
        height:Window.height-toolbar.height
    MDRaisedButton:
        text:"Click"
        pos:200,100
        on_release:banner.show()    

    MDBottomAppBar:
        md_bg_color: app.theme_cls.primary_light
        MDTopAppBar:
            type: "bottom"
            title: "Bottom"
            icon: "android"
            mode: "end" 
            

