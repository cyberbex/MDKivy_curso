MI:
<MI>:
    orientation: "vertical"
    MDTopAppBar:    
        title: "My App"
        md_bg_color: app.theme_cls.primary_dark
        left_action_items:[["menu"]]
        right_action_items:[["clock"]]
    MDLabel:

    MDTextField:
        hint_text: "Hit Text"
        helper_text: "Just enter Only 7 caracters"
        helper_text_mode: "on_error"
        max_text_length: 7
        mode: "rectangle"
    MDTextField:
        icon_left:"email"
        hint_text:"Email Here"
        normal_color:"app.theme_cls.primary_light"
        mode:"round"     
    MDBottomAppBar:
        md_bg_color: app.theme_cls.primary_light
        MDTopAppBar:
            type: "bottom"
            title: "Bottom"
            icon: "android"
            mode: "end" 
            

